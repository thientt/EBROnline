@model EBROnline.Model.DTO.SYSUsersDto


@{
    ViewBag.Title = "Index";
}

<br />
<br />

<div class="row">
    <div class="col-xs-12 col-md-offset-2 col-md-8">
        <div class="form-horizontal">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">
                        <strong>My Account</strong>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="control-label col-md-2">First Name </label>
                        <div class="col-md-10">
                            @Html.EBRTextBoxFor(model => model.Firstname, htmlAttributes: new { @class = "form-control" }, disabled: true)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Last Name </label>
                        <div class="col-md-10">
                            @Html.EBRTextBoxFor(model => model.Lastname, htmlAttributes: new { @class = "form-control" }, disabled: true)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Email </label>
                        <div class="col-md-10">
                            @Html.EBRTextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control" }, disabled: true)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">RegistedDate</label>
                        <div class="col-md-10">
                            @Html.EBRTextBoxFor(model => model.RegistedDate, htmlAttributes: new { @Value = @Model.RegistedDate.ToString("d"), @class = "form-control" }, disabled: true)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Role</label>
                        <div class="col-md-10">
                            @Html.EBRTextBoxFor(model => model.Role.Name, htmlAttributes: new { @class = "form-control" }, disabled: true)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Phone</label>
                        <div class="col-md-10">
                            @Html.EBRTextBoxFor(model => model.Phone, htmlAttributes: new { @class = "form-control" }, disabled: true)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-md-offset-2 col-md-8">
        @Html.ActionLink("Edit", "EditProfile", new { @id = Model.Id }) |
        @Html.ActionLink("Change Password", "ChangePassword", new { @id = Model.Id })
    </div>
</div>
