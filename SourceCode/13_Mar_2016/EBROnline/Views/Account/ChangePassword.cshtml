@model EBROnline.ViewModel.ChangePasswordViewModel
@{
    ViewBag.Title = "ChangePassword";
}


<br />
<br />

@if (TempData["Result"] != null)
{
    <div class="alert alert-danger fade in">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>Error!</strong>@TempData["Result"]
    </div>
}
@using (@Html.BeginForm())
{
    <div class="row">
        <div class="col-xs-12 col-md-offset-2 col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">
                        <strong>Change Password</strong>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-3">Email</label>
                            <div class="col-md-9">
                                @Html.EBRTextBoxFor(model => model.Email, new { @class = "form-control" }, disabled: true)
                                @Html.HiddenFor(x => x.Email)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Old Password </label>
                            <div class="col-md-9">
                                @Html.PasswordFor(model => model.PasswordCurrent, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.PasswordCurrent)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">New Password</label>
                            <div class="col-md-9">
                                @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.NewPassword)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Confirm Password</label>
                            <div class="col-md-9">
                                @Html.PasswordFor(model => model.NewConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.NewConfirmPassword)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <button class="btn btn-primary btn-width-md" type="submit" value="Save" name="btnSubmit" id="btnSubmit">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-xs-12 col-md-offset-2 col-md-8">
        @Html.ActionLink("My Account", "Index")
    </div>
</div>

@Html.Partial("_PartialPageLoading")
