@model EBROnline.ViewModel.RegisterViewModel

@{
    ViewBag.Title = "Registration";
}
<br />
<br />
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">New User Registration</h2>
            </div>
            <div class="panel-body">
                @using (@Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "Registration failed. Check your inputs!")

                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-3">First Name</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(u => u.FirstName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(u => u.FirstName)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Last Name</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(u => u.LastName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(u => u.LastName)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Email</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(u => u.Email)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Password</label>
                            <div class="col-md-9">
                                @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(u => u.Password)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Confirm Password</label>
                            <div class="col-md-9">
                                @Html.PasswordFor(u => u.ConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(u => u.ConfirmPassword)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <button class="btn btn-primary" name="btnSubmit" id="btnSubmit">Register</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-sm-3"></div>
</div>

@{ Html.Partial("_PartialPageLoading");}
