@model EBROnline.ViewModel.RecoverPasswordViewModel
@{
    ViewBag.Title = "RecoverPassword";
}

<br />
<br />

@if (TempData["Message"] != null)
{
    <div class="alert alert-danger fade in">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        @TempData["Message"]
    </div>
}
@if (ViewBag.Success == 1)
{
    <h5>Recovery email was sent successfully!</h5>
}
else
{
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Recover Password</h2>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Email</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(u => u.Email)
                                    <span style="color:red;">@TempData["Message"]</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button class="btn btn-primary" name="btnSubmit" id="btnSubmit">Recover</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
}
@{Html.Partial("_PartialPageLoading");}