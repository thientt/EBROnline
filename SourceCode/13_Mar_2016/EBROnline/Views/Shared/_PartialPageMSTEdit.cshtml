@model EBROnline.ViewModel.MSTViewModel
@{
    AjaxOptions ajaxOption = new AjaxOptions
    {
        Url = Url.Action("Edit"),
        HttpMethod = "POST",
        OnBegin = "onEditMSTBegin",
        OnComplete = "onEditMSTComplete",
        OnSuccess = "onEditMSTSuccess",
        OnFailure = "onEditMSTFailure",
    };
}

@using (Ajax.BeginForm(ajaxOption))
{
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            <label class="control-label col-sm-2">Name<span class="required">*</span></label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", @id = "txtNameEdit" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Description</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "form-control", @id = "txtDescriptionEdit" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Edit" class="btn btn-primary btn-width-md" name="btnEdit" id="btnEdit" />&nbsp;
                <button type="button" class="btn btn-default btn-width-md" name="btnCancel" id="btnCancel" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
}

